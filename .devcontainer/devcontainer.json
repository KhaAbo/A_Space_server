{
    "name": "Gaze Estimation API Dev",
    "dockerComposeFile": [
        "../docker-compose.yml"
    ],
    "service": "gaze-api",
    "workspaceFolder": "/app",
    "shutdownAction": "stopCompose",
    "overrideCommand": true,
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "ms-python.isort",
                "ms-toolsai.jupyter"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": false,
                "python.formatting.provider": "black",
                "editor.formatOnSave": true,
                "files.exclude": {
                    "**/__pycache__": true,
                    "**/*.pyc": true
                }
            }
        }
    },
    "postCreateCommand": "pip install --no-cache-dir -r requirements-docker.txt",
    "forwardPorts": [
        8000
    ],
    "portsAttributes": {
        "8000": {
            "label": "FastAPI Server",
            "onAutoForward": "notify"
        }
    },
    "remoteUser": "root"
}